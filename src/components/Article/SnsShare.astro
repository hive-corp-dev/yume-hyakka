---
const {postUrl, title} = Astro.props;
---

<div class="sns">
  <p class="sns__title"><img src="/common/icon-speech.svg" width="40" height="50" alt="" />SNSでシェア</p>
  <ul class="sns__btns">
    <li class="sns__btn">
      <a href={`http://www.facebook.com/share.php?u=${postUrl}`}
      target="_blank" rel="noopener noreferrer" class="sns__link -fb">
        <img src="/common/sns/icon-fb-circle.svg" alt="Twitter" width="40" height="40" />
        <span>Facebook</span>
      </a>
    </li>
    <li class="sns__btn">
      <a href={`https://twitter.com/share?url=${postUrl}&text=${title}`} target="_blank" rel="noopener noreferrer" class="sns__link -x">
        <img src="/common/sns/icon-x-white.svg" alt="Twitter" width="40" height="40" />
        <span>X（Twitter）</span>
      </a>
    </li>
    
    <li class="sns__btn">
      <a href={`https://social-plugins.line.me/lineit/share?url=${postUrl}`}
      target="_blank" rel="noopener noreferrer" class="sns__link -line">
        <img src="/common/sns/icon-line.svg" alt="Twitter" width="40" height="40" />
        <span>LINE</span>
      </a>
    </li>
  </ul>
</div>

<style lang="scss">
  .sns {
    display: flex;
    flex-direction: column;
    margin-top: 4.8rem;
    border-top: .1rem solid #e7e7e7;
    position: relative;
    padding: 3.2rem 3.2rem 4rem;
    background-color: rgba(#fff, 1);
    margin-top: 4rem;
    border: .1rem solid #eee;

    @include mixin.sp {
      padding: 2.4rem;
      margin-top: 2.4rem;
    }

    &__title {
      font-size: 2rem;
      font-weight: bold;
      text-align: center;
      display: flex;
      justify-content: center;
      align-items: center;

      @include mixin.sp {
        font-size: 1.8rem;
      }

      img {
        width: 2rem;
        margin-right: 1.2rem;

        @include mixin.sp {
          width: 1.8rem;
          margin-right: 1rem;
        }
      }
    }

    &__btns {
      display: grid;
      gap: 1.6rem;
      grid-template-columns: repeat(3, 1fr);
      margin-top: 2rem;

      @include mixin.sp {
        grid-template-columns: repeat(1, 1fr);
        gap: 1rem;
        max-width: 28rem;
        width: 100%;
        margin-left: auto;
        margin-right: auto;
      }
    }

    &__btn {
      display: flex;
      width: 100%;
    }

    &__link {
      position: relative;
      display: flex;
      align-items: center;
      width: 100%;
      padding: 1rem 1.6rem 1rem 4rem;
      min-height: 4.8rem;
      color: white;
      font-family: var.$font-base;
      font-weight: 400;
      font-size: 1.4rem;
      font-weight: bold;
      border-radius: .5rem;
      letter-spacing: .02em;
      transition: all .3s;
      background-image: linear-gradient(to right bottom, var.$c-key-1, var.$c-key-2);
      overflow: hidden;

      &::before {
        content: '';
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        transition: all .3s;
      }

      @include mixin.hover {
        &:hover {
          background-image: linear-gradient(to right bottom, var.$c-key-1, var.$c-key-2);

          &::before {
            opacity: 0;
          }
        }
      }

      img {
        position: absolute;
        left: 1rem;
      }

      span {
        position: relative;
      }

      &.-x {

        &::before {
          background: #000;
        }

        img {
          width: 1.6rem;
          left: 1.2rem;
        }

      }

      &.-fb {
        &::before {
          background: #1877f2;
        }

        img {
          width: 2.4rem;
        }

      }

      &.-line {
        &::before {
          background: #06c755;
        }

        img {
          width: 2.4rem;
        }
      }
    }
  }
</style>