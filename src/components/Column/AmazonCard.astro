---
import { Image } from "astro:assets"
const {title, img, url} = Astro.props;
import { FaAmazon } from "react-icons/fa";
---

<div class="card">
  <a class="img" href={url} target="_blank">
    <Image src={img} alt={title} width={240} height={240} />
  </a>
  <div class="content">
    <div class="title">{title}</div>
    <a href={url} target="_blank" class="btn">Amazonで見る <FaAmazon /></a>
  </div>
</div>

<style lang="scss">
  .card {
    border: .1rem solid #f0f0f0;
    display: flex;
    align-items: flex-start;
    gap: 2.4rem;
    background-color: #fff;
    padding: 2rem;
    box-shadow: 0 0 1.6rem rgba(0,0,0, 0.02);

    @include mixin.sp {
      flex-direction: column;
      align-items: center;
    }
  }

  .img {
    width: 12rem;
    height: 12rem;
    flex-shrink: 0;
    transition: all .3s;

    @include mixin.hover {
      &:hover {
        opacity: .7;
      }
    }

    img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
  }

  .content {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .title {
    font-weight: bold;
    line-height: 1.6;
    margin-top: 0;
    font-size: 1.5rem;

    @include mixin.sp {
      font-size: 1.4rem;
    }
  }

  .btn {
    border-radius: .4rem;
    padding: 0.8rem 1.6rem;
    font-size: 1.4rem;
    font-weight: bold;
    line-height: 1.5;
    color: #fff;
    background-color:#f99a0c;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 18rem;
    transition: all .3s;
    width: 16rem;
    font-size: 1.3rem;
    margin-top: 1.6rem;

    @include mixin.sp {
      margin: 2.4rem auto 0;
    }

    @include mixin.hover {
      &:hover {
        background-color: #e38800;
      }
    }

    svg {
      transform: translateY(.2rem);
      margin-left: .2rem;
    }
  }
</style>