---
import Container from "./Container.astro"
---

<footer class="footer">
  <Container>
    <div class="footer__content">
      <div class="footer__logo">夢百科</div>
      <nav class="footer__nav">
        <ul class="footer__nav-list">
          <li class="footer__nav-item">
            <a href="/" class="footer__nav-link">ホーム</a>
          </li>
          <li class="footer__nav-item">
            <a href="/article" class="footer__nav-link">夢占い</a>
          </li>
        </ul>
      </nav>
    </div>

    <div class="footer__sub">
      <nav class="footer__sub-nav">
        <ul class="footer__sub-nav-list">
          <li class="footer__sub-nav-item">
            <a href="/privacy-policy" class="footer__sub-nav-link">プライバシーポリシー</a>
          </li>
          <li class="footer__sub-nav-item">
            <a href="/disclaimer" class="footer__sub-nav-link">免責事項</a>
          </li>
        </ul>
      </nav>
    </div>
  </Container>
  <div class="footer__copy">
    <p>© 2024 夢百科 All Rights Reserved.</p>
  </div>
</footer>

<style lang="scss">
  .footer {
    position: relative;
    background-size: cover;
    padding: 8rem 0 0;
    color: #fff;

    @include mixin.sp {
      padding-top: 4rem;
    }

    &::before {
      content: '';
      width: 100%;
      height: 100%;
      // background-image: linear-gradient(to right ,var.$c-key-1, var.$c-key-2);
		background-color: rgba(0,0,0, .08);
      opacity: .05;
      position: absolute;
      left: 0;
      top: 0;
      pointer-events: none;
    }

    // &::after {
    //   content: '';
    //   width: 100%;
    //   height: .2rem;
    //   background-image: linear-gradient(to right ,var.$c-key-1, var.$c-key-2);
    //   display: block;
    //   position: absolute;
    //   top: 0;
    //   left: 0;
    // }

    &__content {
      display: flex;
      justify-content: space-between;
      padding: 4rem 0;
    }

    &__logo {
      font-size: 2.4rem;
      font-weight: bold;

      @include mixin.sp {
        font-size: 2rem;
      }
    }

    &__nav {}

    &__nav-list {
      display: flex;
      flex-wrap: wrap;
      gap: 2.4rem;
      
      @include mixin.sp {
        gap: 1.6rem;
      }
    }

    &__nav-item {}

    &__nav-link {
      transition: all .3s;

      @include mixin.sp {
        font-size: 1.4rem;
      }

      @include mixin.hover {
        &:hover {
          opacity: 0.7;
        }
      }
    }

    &__sub {

    }

    &__sub-nav-list {
      display: flex;
      justify-content: flex-end;
      gap: 3.2rem;

      @include mixin.sp {
        justify-content: center;
        gap: 1.6rem;
      }
    }

    &__sub-nav-item {}

    &__sub-nav-link {
      font-size: 1.3rem;
      text-decoration: underline;
      transition: all .3s;

      @include mixin.sp {
        font-size: 1.1rem;
      }

      @include mixin.hover {
        &:hover {
          opacity: 0.7;
        }
      }
    }

    &__copy {
      text-align: center;
      padding: 1.2rem;
      font-size: 1.4rem;
      margin-top: 1.6rem;
      // background-color: var.$c-key-1;
      // color: #fff;

      @include mixin.sp {
        font-size: 1.1rem;
      }
    }
  }
</style>