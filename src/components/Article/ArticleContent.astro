---
const { entry, components = {} } = Astro.props;
const { Content } = await entry.render();
---

<div class="content" id="article-body">
  <Content components={components} />
</div>

<style lang="scss">
.content {
  font-family:var.$font-base;
  font-weight: 400;
  font-weight: 500;
  line-height: 2.25;

  @include mixin.sp {
    font-size: 1.5rem;
    line-height: 2;
  }
}
</style>

<style lang="scss" is:global>
  .content {
    // select h2 to h6
    h2, h3, h4, h5, h6 {
      font-family: var.$font-serif;
      font-weight: bold;
      line-height: 1.75;
    }

    h2 {
      position: relative;
      font-size: 2.8rem;
      color: white;
      padding:0.4rem 1.2rem;

      strong {
        background-image: none;
      }

      @include mixin.sp {
        font-size: 2rem;
      }

      &::before {
        content: '';
        width: 100%;
        height: 100%;
        background-image: linear-gradient(to right ,var.$c-key-1, var.$c-key-2);
        display: block;
        position: absolute;
        bottom: 0;
        left: 0;
        z-index: -1;
      }
    }

    h3 {
      position: relative;
      font-size: 2.4rem;
      padding-left: 2rem;

      strong {
        background-image: none;
      }

      @include mixin.sp {
        font-size: 1.8rem;
        padding-left: 1.6rem;
      }

      &::after {
        content: '';
        width: .4rem;
        height: 70%;
        background-image: linear-gradient(to bottom ,var.$c-key-1, var.$c-key-2);

        display: block;
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        margin: auto 0;

        @include mixin.sp {
          height: 100%;
        }
      }
    }

    h4 {
      font-size: 2.2rem;

      @include mixin.sp {
        font-size: 1.8rem;
      }
    }

    h5 {
      font-size: 2rem;

      @include mixin.sp {
        font-size: 1.6rem;
      }
    }

    h6 {
      font-size: 1.8rem;

      @include mixin.sp {
        font-size: 1.5rem;
      }
    }

    strong {
      font-weight: bold;

      background-image: linear-gradient(to right top, rgba(var.$c-key-1, .8), rgba(var.$c-key-2, .8));
      background-size: 100% .8rem;
      background-repeat: no-repeat;
      background-position: left bottom;

      @include mixin.sp {
        background-size: 100% .4rem;
      }
    }

    ul {
      padding: 2.4rem;
      border: .1rem solid #eee;
      background-color: rgba(white, .5);

       @include mixin.sp {
        padding: 1.6rem;
      }

      strong {
        background-image: none;
      }

      li {
        position: relative;
        padding-left: 1.8rem;
        line-height: 2;

        &:not(:first-child) {
          margin-top: 1.2rem;
        }

        &::before {
          content: '';
          width: .6rem;
          height: .6rem;
          background-image: linear-gradient(to right top, var.$c-key-1, var.$c-key-2);
          border-radius: 50%;
          position: absolute;
          left: 0;
          top: 1.5rem;

          @include mixin.sp {
            top: 1.3rem;
          }
        }
      }
    }

    ol:not([class]) {
      padding: 2.4rem;
      border: .1rem solid #eee;
      background-color: rgba(white, .5);
      counter-reset: number;

       @include mixin.sp {
        padding: 1.6rem;
      }

      strong {
        background-image: none;
      }

      li {
        position: relative;
        padding-left: 2.8rem;
        line-height: 2;
        counter-increment: number;

        &:not(:first-child) {
          margin-top: 1.2rem;
        }

        &::before {
          content: counter(number);
          position: absolute;
          left: 0;
          top: 0.6rem;
          width: 2rem;
          height: 2rem;
          background-image: linear-gradient(to right top, var.$c-key-1, var.$c-key-2);
          border-radius: 50%;
          color: white;
          display: flex;
          align-items: center;
          justify-content: center;
          font-size: 1.1rem;
        }
      }
    }


    a:not([class]) {
      color: #5686f3;
      text-decoration: underline;
    }

    // margins

    & > * {
      margin-top: 2.4rem;

      @include mixin.sp {
        margin-top: 1.6rem;
      }
    }

    h2 {
      margin-top: 6.4rem;

      @include mixin.sp {
        margin-top: 4.8rem;
      }
    }

    h3 {
      margin-top: 4.8rem;

      @include mixin.sp {
        margin-top: 4rem;
      }
    }

    h4 {
      margin-top: 4.8rem;

      @include mixin.sp {
        margin-top: 4rem;
      }
    }

    h5 {
      margin-top: 2.4rem;
    }

    h6 {
      margin-top: 1.6rem;
    }
  }
</style>