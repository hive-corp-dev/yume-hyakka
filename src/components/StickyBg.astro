---
import { Image } from "astro:assets"
import bgImage from '../images/mv.png';
---

<div class="bg">
  <!-- <Image src={bgImage} alt="" loading="eager" class="bg__img" /> -->
</div>

<style lang="scss">
  .bg {
    width: 100%;
    height: 100lvh;
    position: fixed;
    overflow: hidden;
    top: 0;
    left: 0;
    z-index: -1;
    background-image: url('/mv.png');
    background-attachment: fixed;
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;

    &__img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      background-attachment: fixed;
    }
  }
</style>