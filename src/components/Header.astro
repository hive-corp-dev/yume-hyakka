---
import Container from "./Container.astro";
const isTopPage = Astro.url.pathname === '/';
---

<header class="header js-header">
<Container>
  <div class="header__content">
    {
      isTopPage ? (
      <h1 class="header__title">夢百科</h1>
      )
      : (
        <a class="header__title" href="/">夢百科</a>
      )
    }
    <nav>
      <ul class="header__nav-list">
        <li><a href="/">ホーム</a></li>
        <li><a href="/article">夢占い</a></li>
      </ul>
    </nav>
  </div>
</Container>
</header>

<style lang="scss">

.header {
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
  border-bottom: .1rem solid rgba(0,0,0,.1);
  z-index: var.$z-header;
  background-color: white;

  // 白
  // background-color: transparent;
  // border-bottom: .1rem solid rgba(white, .1);
  // color: white;

  &::before {
    content: '';
    width: 100%;
    height: 100%;
    background-image: url("../../texture-02.jpg");
    background-size: cover;
    opacity: 0.2;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;

    // 白
    // opacity: 0;
  }

  &__title {
    display: flex;
    font-size: 2.4rem;
    font-weight: bold;

    @include mixin.sp {
      font-size: 2rem;
    }
  }

  &__content {
    display: flex;
    width: 100%;
    justify-content: space-between;
    align-items: center;
    padding-top: 2.4rem;
    padding-bottom: 2.4rem;

    @include mixin.sp {
      padding-top: 1.6rem;
      padding-bottom: 1.6rem;
    }
  }

  &__nav-list {
    display: flex;
    gap:2.4rem;

    @include mixin.sp {
      font-size: 1.4rem;
    }
  }
}
</style>