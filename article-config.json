{
  "articleStructure": {
    "wordCount": {
      "min": 2000,
      "max": 3000,
      "optimal": 2500
    },
    "sections": {
      "introduction": {
        "characterCount": "100-150",
        "purpose": "興味を引き、記事内容を予告"
      },
      "basicMeaning": {
        "subsections": 3,
        "characterCount": "400-600",
        "purpose": "基本的な象徴意味を解説"
      },
      "detailedInterpretation": {
        "types": ["色別", "状況別", "心理状態別"],
        "subsections": "3-5",
        "characterCount": "800-1200",
        "purpose": "詳細な分析と解釈"
      },
      "conclusion": {
        "characterCount": "300-400",
        "purpose": "まとめと実践的アドバイス"
      }
    },
    "adPlacement": [
      "導入後",
      "基本的な意味後", 
      "詳細解釈後"
    ]
  },
  
  "tagCategories": {
