---
import TagCloud from "@components/Home/TagCloud.astro";
import { getTagsWithArticles } from "@utils/articleTags";
import { getCollection } from 'astro:content';
import ArticleRanking from "./Widgets/ArticleRanking.astro";
import ArticleTocBlock from "./Widgets/ArticleTocBlock.astro";

const articleEntries = await getCollection('article', ({data}) => {
	return data.isDraft === false;
});
const tagsWithArticles = getTagsWithArticles(articleEntries);
---

<aside class="sidebar">
  <div class="sidebar__block">
    <p class="head">人気記事ランキング</p>
    <ArticleRanking />
  </div>
  <div class="sidebar__block">
    <p class="head">キーワード</p>
    <TagCloud tags={tagsWithArticles} type="sidebar" />
  </div>
  <ArticleTocBlock />
</aside>


<style lang="scss">
  .sidebar {
    padding-top: 2.4rem;
    width: 28rem;
    flex-shrink: 0;
    gap: 4rem;
    display: flex;flex-direction: column;

    @include mixin.tab {
      width: 24rem;
    }

    @include mixin.tab-s {
      width: 100%;
      gap: 8rem;
      padding-left: 3rem;
      padding-right: 3rem;
    }

    @include mixin.sp{ 
      padding-left: 0;
      padding-right: 0;
    }
  }

  .sidebar__block {
  }

  .head {
    position: relative;
    font-weight: bold;
    font-size: 1.8rem;
    padding-bottom: 1.2rem;

    &::after {
      content: '';
      width: 100%;
      height: .2rem;
      background-image: linear-gradient(to left , rgb(255, 160, 176), rgb(198, 153, 241));
      position: absolute;
      bottom: 0;
      left: 0;
    }
  }
</style>